<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="expresion" class="form-control" placeholder="Expresion" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="idiom" class="form-control" placeholder="Idiom">
                    </textarea>
                </div>
                <div class="form-group">
                    <textarea name="example" class="form-control" placeholder="example">
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>