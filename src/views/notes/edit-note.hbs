<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="idiom_es" class="form-control" placeholder="spanish idiom"
                        value="{{note.idiom_es}}">
                </div>
                <div class="form-group">
                    <textarea name="idiom_en" class="form-control">{{note.idiom_en}}
                    </textarea>
                </div>
                <div class="form-group">
                    <textarea name="example_en" class="form-control">{{note.example_en}}
                    </textarea>
                </div>
                <div class="form-group">
                    <textarea name="example_es" class="form-control">{{note.example_es}}
                    </textarea>
                </div>
                <div class="form-group"><button class="btn btn-primary btn-block" type="submit">save</button></div>
            </form>
        </div>
    </div>
</div>