<div class="row">
    {{#each arrayNotes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{this.title}} <a href='/notes/edit/{{this.id}}'><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{this.description}}</p>
                <button class="btn btn-danger btn-block btn-sm">
                    delete
                </button>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">There are not notes yet</p>
            <a href="/notes/add" class="btn btn-success btn-block">
                Create note
            </a>
        </div>
    </div>
    {{/each}}
</div>