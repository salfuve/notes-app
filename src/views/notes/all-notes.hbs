<div class="row">
    {{#each arrayNotes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{this.title}} <a href='/notes/edit/{{this.id}}'><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{this.description}}</p>
                <form action="/notes/delete/{{this.id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1> Hello {{user.name}}</h1>
            <p class="lead">There are not notes yet</p>
            <a href="/notes/add" class="btn btn-success btn-block">
                Create note
            </a>
        </div>
    </div>
    {{/each}}
</div>